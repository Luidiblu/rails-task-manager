<h3><%= @task.title %></h3>
<p>Details: <%= @task.details %></p>
<p>Done?: <%=  @task.completed %></p>

<%= link_to "Edit Task", edit_task_path(@task) %>

<%= link_to "Mark as Done", mark_path(@task) %>

<%= link_to "Delete Task", task_path(@task), method: :delete %>

<%= link_to "Back to Tasks", tasks_path %>
